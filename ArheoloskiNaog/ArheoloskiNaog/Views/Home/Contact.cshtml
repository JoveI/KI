@{
    ViewBag.Title = "Контакт";
}
<script>
    function validateForm() {
        var x = document.forms["contactForm"]["fname"].value;
        var y = document.forms["contactForm"]["txtEmail"].value;
        var z = document.forms["contactForm"]["txtContent"].value;
        document.getElementById("fnameError").textContent = "";
        document.getElementById("EnameError").textContent = "";
        document.getElementById("TnameError").textContent = "";
        if (x == null || x == "") {
            document.getElementById("fnameError").textContent = "Ве молиме внесете го вашето име и презиме";
            return false;
        }
        if (y == null || y == "") {
            document.getElementById("EnameError").textContent = "Ве молиме внесете ја вашата емаил адреса";
            return false;
        }
        if (z == null || z == "") {
            document.getElementById("TnameError").textContent = "Ве молиме внесете содржина";
            return false;
        }
    }
</script>
<h2>@ViewBag.Title</h2>
<div id="respond" style="width:60%">
    <h3 id="reply-title">Контакт</h3>
    <form action="" method="post" name="contactForm" id="contactForm" class="" onsubmit="return validateForm()">
        <div class="form-group">
            <label for="inputName">Име</label>
            <input type="text" class="form-control" id="inputName" placeholder="Вашето име и презиме"> <label id="fnameError" style="color:red"></label>
        </div>
        <div class="form-group">
            <label for="inputEmail">Емаил адреса <i class="text-danger">*</i></label>
            <input type="email" class="form-control" id="inputEmail" placeholder="Вашата емаил адреса"> <label id="EnameError" style="color:red"></label>
        </div>

        <div class="form-group">
            <label for="inputComment">Порака</label>
            <textarea class="form-control" rows="6"></textarea> <label id="TnameError" style="color:red"></label>
        </div>
        <div class="row">
            <div class="col-md-4 text-right" style="float:right;">
                <button type="submit" class="btn btn-action">Испрати</button>
            </div>

        </div>
    </form>
    <br />
    <br />
</div> <!-- /respond -->
